<div class="container">
    <div class="row">
        <div class="col s6 offset-s3">
            <div class="card">
                <div class="card-image">
                    <img src={{book.img}}>
                    <span class="card-title">{{book.name}}</span>
                </div>
                <div class="card-content">
                    <p>{{book.year}} year</p>
                    <p>{{book.price}} $</p>
                </div>
                <div class="card-action">
                    <a href="/books/update/{{book.id}}/add" class="btn">Update</a>
                    <a href="/books/delete/{{book.id}}" class="btn">Delete</a>
                </div>
            </div>
        </div>
    </div>
</div>